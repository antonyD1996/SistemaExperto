<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4C3"
    tools:context=".FragmentNauseasVomito">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/nauseas"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:padding="20dp"
            android:background="@drawable/fondo_pregunta"
            android:text="@string/fragment_nauseas_y_vomito" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idRespuestaSiNauseasVomito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@drawable/fondo_boton_si"
                android:text="@string/respuesta_si"
                android:textColor="#ffffff"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/idRespuestaNoNauseasVomito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@drawable/fondo_boton_no"
                android:text="@string/respuesta_no"
                android:textColor="#ffffff"
                android:onClick="onClick"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>